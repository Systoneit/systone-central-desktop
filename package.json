{
  "name": "systone-central",
  "version": "1.0.0",
  "description": "Systone Central Desktop Wrapper",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc -w",
    "start": "electron .",
    "build": "tsc",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:all": "npm run build && electron-builder -mwl"
  },
  "build": {
    "appId": "com.systone.central",
    "productName": "Systone Central",
    "npmRebuild": false,
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "!**/node_modules/*/{test,__tests__}/**",
      "!**/chrome_crashpad_handler*",
      "!**/*.map",
      "!**/*.md",
      "!**/demo{,s}/**",
      "!**/example{,s}/**",
      "!**/docs/**",
      "!**/*.ts",
      "!src/**"
    ],
    "asar": true,
    "compression": "maximum",
    "publish": null,
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        "nsis"
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
